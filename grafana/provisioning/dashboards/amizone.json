{
  "id": null,
  "uid": "amizone-overview",
  "title": "Amizone Overview",
  "tags": ["amizone"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Active Requests",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "sum(amizone_requests_active) or vector(0)",
          "legendFormat": "Active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Request Rate (req/s)",
      "type": "stat",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "sum(rate(amizone_requests_total[5m])) or vector(0)",
          "legendFormat": "req/s",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate (err/s)",
      "type": "stat",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(amizone_errors_total[5m])) or vector(0)",
          "legendFormat": "err/s",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Login Attempts (total)",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "sum(amizone_login_attempts_total) or vector(0)",
          "legendFormat": "Login Attempts",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Cloudflare Challenges (total)",
      "type": "stat",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "expr": "sum(amizone_cloudflare_challenges_total) or vector(0)",
          "legendFormat": "CF Challenges",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Goroutines",
      "type": "stat",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "go_goroutines",
          "legendFormat": "Goroutines",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "sum by (method, endpoint, status_code) (rate(label_replace(amizone_requests_total, \"endpoint\", \"$1\", \"endpoint\", \"([^?]*).*\")[5m]))",
          "legendFormat": "{{method}} {{endpoint}} {{status_code}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "Request Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(amizone_request_duration_milliseconds_bucket[5m])))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(amizone_request_duration_milliseconds_bucket[5m])))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(amizone_request_duration_milliseconds_bucket[5m])))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "id": 9,
      "title": "Errors Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "color": { "fixedColor": "red", "mode": "fixed" }
        }
      },
      "targets": [
        {
          "expr": "sum by (error_type) (rate(amizone_errors_total[5m]))",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Login Attempts Over Time",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "sum by (success) (rate(amizone_login_attempts_total[5m]))",
          "legendFormat": "{{success}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 11,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 20, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "RSS",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes",
          "legendFormat": "Heap In-Use",
          "refId": "B"
        }
      ]
    },
    {
      "id": 12,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "x": 8, "y": 20, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ]
    },
    {
      "id": 13,
      "title": "GC Duration",
      "type": "timeseries",
      "gridPos": { "x": 16, "y": 20, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "rate(go_gc_duration_seconds_sum[5m])",
          "legendFormat": "GC Duration",
          "refId": "A"
        }
      ]
    }
  ]
}
